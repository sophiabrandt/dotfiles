                "type": "basic"
              },
              {
                "from": {
                  "key_code": "m",
                  "modifiers": {
                    "mandatory": ["command", "option"],
                    "optional": ["any"]
                  }
                },
                "type": "basic"
              }
            ]
          },
          {
